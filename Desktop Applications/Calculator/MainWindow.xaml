        <Button x:Name="ChangeOperands_Btn" Content="+/-" HorizontalAlignment="Left" Margin="16,545,0,0" VerticalAlignment="Top" Height="76" Width="151" FontSize="25" Background="#FF294D6F" Foreground="#FFF3F3F3"/>
        <Button x:Name="Zero_Btn" Content="0" HorizontalAlignment="Left" Margin="172,545,0,0" VerticalAlignment="Top" Height="76" Width="151" FontSize="25" Background="#FF294D6F" Foreground="#FFF3F3F3"/>
        <Button x:Name="Decimal_Btn" Content="." HorizontalAlignment="Left" Margin="328,545,0,0" VerticalAlignment="Top" Height="76" Width="151" Click="Decimal_Btn_Click" FontSize="25" Background="#FF294D6F" Foreground="#FFF3F3F3"/>
        <Button x:Name="Equal_Btn" HorizontalAlignment="Left" Margin="484,545,0,0" VerticalAlignment="Top" Height="76" Width="151" Click="Equal_Btn_Click" FontSize="25" Background="#FFB7D4E4">
            <TextBlock TextWrapping="Wrap" Text="="/>
        </Button>
        <Button x:Name="One_Btn" Content="1" HorizontalAlignment="Left" Margin="16,462,0,0" VerticalAlignment="Top" Height="76" Width="151" Click="One_Btn_Click" FontSize="25" Background="#FF294D6F" Foreground="#FFF3F3F3"/>
        <Button x:Name="Two_Btn" Content="2" HorizontalAlignment="Left" Margin="172,462,0,0" VerticalAlignment="Top" Height="76" Width="151" Click="Two_Btn_Click" FontSize="25" Background="#FF294D6F" Foreground="#FFF3F3F3"/>
        <Button x:Name="Three_Btn" Content="3" HorizontalAlignment="Left" Margin="328,462,0,0" VerticalAlignment="Top" Height="76" Width="151" Click="Three_Btn_Click" FontSize="25" Background="#FF294D6F" Foreground="#FFF3F3F3"/>
        <Button x:Name="Add_Btn" Content="+" HorizontalAlignment="Left" Margin="484,462,0,0" VerticalAlignment="Top" Height="76" Width="151" Click="Add_Btn_Click" FontSize="25" Background="#FF294D6F" Foreground="#FFF3F3F3"/>
        <TextBox x:Name="TextBoxAnswer_Btn" Margin="16,31,0,0" TextWrapping="Wrap" Text="242141414" VerticalAlignment="Top" Width="619" Height="93" HorizontalAlignment="Left" FontSize="72" FontFamily="Cascadia Mono SemiLight" TextAlignment="Right"/>
        <TextBlock x:Name="Operation_Text" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="610" TextAlignment="Right"/>
        <ListBox x:Name="HistoryList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="640,31,10,52"/>
        <TextBlock x:Name="Operation_Text_Copy" HorizontalAlignment="Left" Margin="640,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="167" Text="History"/>
