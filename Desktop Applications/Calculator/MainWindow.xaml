        <Button x:Name="Divide_Btn" Content="÷" HorizontalAlignment="Left" Margin="484,217,0,0" VerticalAlignment="Top" Height="76" Width="151" Click="Divide_Btn_Click" FontSize="25" Background="#FF294D6F" Foreground="#FFE4E3E3"/>
        <Button x:Name="Modulo_Btn" Content="%" HorizontalAlignment="Left" Margin="16,134,0,0" VerticalAlignment="Top" Height="76" Width="151" Click="Modulo_Btn_Click" FontSize="25" Background="#FF294D6F" Foreground="#FFF3F3F3"/>
        <Button x:Name="ClearEntry_Btn" Content="CE" HorizontalAlignment="Left" Margin="172,134,0,0" VerticalAlignment="Top" Height="76" Width="151" Click="ClearEntry_Btn_Click" FontSize="25" Background="#FF294D6F" Foreground="#FFF3F3F3"/>
        <Button x:Name="ClearAll_Btn" Content="C" HorizontalAlignment="Left" Margin="328,134,0,0" VerticalAlignment="Top" Height="76" Width="151" Click="ClearAll_Btn_Click" FontSize="25" Background="#FF294D6F" Foreground="#FFF3F3F3"/>
        <Button x:Name="ClearLast_Btn" Content="&lt;-" HorizontalAlignment="Left" Margin="484,134,0,0" VerticalAlignment="Top" Height="76" Width="151" FontSize="25" Click="ClearLast_Btn_Click" Background="#FF294D6F" Foreground="#FFF3F3F3"/>
        <Button Content="7" HorizontalAlignment="Left" Margin="16,381,0,0" VerticalAlignment="Top" Height="76" Width="151"/>
        <Button Content="8" HorizontalAlignment="Left" Margin="172,381,0,0" VerticalAlignment="Top" Height="76" Width="151"/>
        <Button Content="9" HorizontalAlignment="Left" Margin="328,381,0,0" VerticalAlignment="Top" Height="76" Width="151"/>
        <Button Content="X" HorizontalAlignment="Left" Margin="484,381,0,0" VerticalAlignment="Top" Height="76" Width="151"/>
        <Button Content="7" HorizontalAlignment="Left" Margin="16,298,0,0" VerticalAlignment="Top" Height="76" Width="151"/>
        <Button Content="8" HorizontalAlignment="Left" Margin="172,298,0,0" VerticalAlignment="Top" Height="76" Width="151"/>
        <Button Content="9" HorizontalAlignment="Left" Margin="328,298,0,0" VerticalAlignment="Top" Height="76" Width="151"/>
        <Button Content="X" HorizontalAlignment="Left" Margin="484,298,0,0" VerticalAlignment="Top" Height="76" Width="151"/>
        <Button x:Name="Four_Btn" Content="4" HorizontalAlignment="Left" Margin="16,381,0,0" VerticalAlignment="Top" Height="76" Width="151" Click="Four_Btn_Click" FontSize="25" Background="#FF294D6F" Foreground="#FFF3F3F3"/>
        <Button x:Name="Five_Btn" Content="5" HorizontalAlignment="Left" Margin="172,381,0,0" VerticalAlignment="Top" Height="76" Width="151" Click="Five_Btn_Click" FontSize="25" Background="#FF294D6F" Foreground="#FFF3F3F3"/>
        <Button x:Name="Six_Btn" Content="6" HorizontalAlignment="Left" Margin="328,381,0,0" VerticalAlignment="Top" Height="76" Width="151" Click="Six_Btn_Click" FontSize="25" Background="#FF294D6F" Foreground="#FFF3F3F3"/>
        <Button x:Name="Subtract_Btn" Content="-" HorizontalAlignment="Left" Margin="484,381,0,0" VerticalAlignment="Top" Height="76" Width="151" Click="Subtract_Btn_Click" FontSize="25" Background="#FF294D6F" Foreground="#FFF3F3F3"/>
