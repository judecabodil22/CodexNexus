        <Button x:Name="Nine_Btn" Content="9" HorizontalAlignment="Left" Margin="328,298,0,0" VerticalAlignment="Top" Height="76" Width="151" Click="Nine_Btn_Click" FontSize="25" Background="#FF294D6F" Foreground="#FFF3F3F3"/>
